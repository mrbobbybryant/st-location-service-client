{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },

  "plugins": [
    "react"
  ],

  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },

  "rules": {
    "strict": [2, "global"],
    "eqeqeq": [2, "smart"],
    "no-unused-vars": [2, {"vars": "all", "args": "none"}]
  }
}
